#!/bin/sh -e

sudo python3 -m pip install xonsh[ptk]

sudo yum install git zlib-devel autoconf automake libtool python35 python35-pip
git clone https://github.com/shellinabox/shellinabox.git
cd shellinabox
autoreconf -i
./configure
make
sudo make install

useradd xonsh

cp pam.conf /etc/pam.d/shellinabox
cp upstart.conf /etc/init/shellinabox.conf
cp xonshrc ~xonsh/.xonshrc
